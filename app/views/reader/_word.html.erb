<%
  w_translation = word.word_translation
  w_transliteration = word.en_transliteration
%>

<span class="w <%= word.char_type_name %>"
      id="w-<%= word.id %>"
      data-local='<%= w_translation&.language_name %>'
      data-audio="<%= word.audio_url %>"
      data-t="<%= w_translation&.text %>"
      data-tr="<%= w_transliteration %>"
      data-position="<%= word.position %>"
      data-key="<%= word.location %>"
      data-controller="word">
  <%= word.get_text(font) %>
</span>
