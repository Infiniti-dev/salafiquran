            <h6 class="mb-0 ff-b"><%= _t('settings.font_size.translation') %></h6>
            <i class="fa fa-minus-circle fa-center px-2 c-pointer" data-increment="-1" data-target=".translation" data-trigger="font-size"></i>
          </div>
        </div>
      </div>
    </div>

