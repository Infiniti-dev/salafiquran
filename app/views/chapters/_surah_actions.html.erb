<section class="">
  <div class="container surah-actions overflow-auto mt-4 mt-md-0">
    <ul class=" d-flex flex-row flex-nowrap list-inline mb-0" id="surah-actions">
      <li class="list-inline-item d-flex align-items-center" id="reciter-dropdown">
        <i class="fa fa-mic text-info"></i>
        <span class="text-muted">Reciters:</span>
        <select class="p-1 rounded-lg bg-light border-info text-info" id="reciter-dropdown-menu" placeholder="<%= _t('settings.reciters')%>">
          <% recitations.each do |recitation| %>
                <option value="<%= recitation.reciter_name %>">
                  <%= recitation.reciter_name %>
                </option>
          <% end %>
        </select>

      </li>

      <li class="list-inline-item d-flex align-items-center" id="translation-dropdown">
        <select class="p-1 rounded-lg bg-light border-info text-info" id="translations" placeholder="Translation">
          <% ordered_translations.each do |language, list| %>
            <optgroup label="<%= language.humanize %>">
              <% list.each do |trans| %>
                <option value="<%= trans[0] %>">
                  <%= trans[1] %>
                </option>
              <% end %>
            </optgroup>
          <% end %>
        </select>
      </li>

      <li class="list-inline-item d-flex align-items-center text-nowrap" id="tooltip">
        <i class="fa fa-commenting-o text-info"></i>
        <span class="text-muted text-nowrap">Tooltip Display: </span>
        <select class="p-1 rounded-lg bg-light border-info text-info" id="translation-dropdown" placeholder="<%= _t('settings.tooltip.label')%>">
                <option value="settings.tooltip.translation">
                  Translation
                </option>
                <option value="settings.tooltip.transliteration">
                  Transliteration
                </option>
        </select>
      </li>

      <li class='list-inline-item border-left d-flex align-items-center' id="arabic-font" data-target=".word">
        <i class="fa fa-text-width text-info"></i>
        <%= _t('settings.font_size.arabic') %>

        <a href="" class="font-size increase">+</a>
        <a href="" class="font-size decrease">-</a>
      </li>

      <li class='list-inline-item d-flex align-items-center' id="translation-font" data-target=".translation">
        <%= _t('settings.font_size.translation') %>
        <a href="" class="font-size increase">+</a>
        <a href="" class="font-size decrease">-</a>
      </li>

      <li class="list-inline-item border-left d-flex align-items-center">
        <%= link_to url_for(reading: !@presenter.reading_mode?), id: 'toggle-readingmode', class:"d-flex" do %>
          <span class="fa fa-book text-info"></span>
          <%= _t('settings.reading') %>
        <%end %>
      </li>

      <li class="list-inline-item d-flex align-items-center">
        <a id="toggle-nightmode" class="d-flex text-nowrap">
          <i class="fa fa-lightbulb-1 text-info"></i>
          <%= _t('settings.night_mode.label') %>
        </a>
      </li>

      <li class="list-inline-item d-flex align-items-center">
        <a id="reset-setting" class="fa fa-close text-info" rel="tooltip" data-toggle="tooltip" title="<%= t('settings.reset') %>"></a>
      </li>

      <li class="list-inline-item d-flex align-items-center">
        <%= link_to chapter_info_path(@presenter.chapter), remote: true, data: {disable_with: spinning_loader}, class:"d-flex text-nowrap" do %>
          <i class="fa fa-info text-info"></i>
          <%= _t("chapters.info") %>
        <% end %>
      </li>
    </ul>
  </div>
</section>

