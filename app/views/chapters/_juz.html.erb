<li class="list-group-item">
  <% juz.verse_mapping.each do |chapter_number, verses| %>
    <%= link_to range_path(chapter = @presenter.chapters[chapter_number.to_i - 1], verses), class: 'd-flex flex-row mb-4' do %>
      <div class="col-8 col-sm-8">
        <h5 class="name">
          <%= chapter.name_simple %>
          <span class="badge badge-primary"><%= verses %></span>
        </h5>
        <span class="translatedName <%= chapter.translated_name.language_name %>"><%= chapter.translated_name.name %></span>
      </div>

      <div class="col-4 col-sm-4 icon">
        <span class="icon-surah icon-surah<%= chapter.chapter_number %>"></span>
      </div>
    <% end %>
  <% end %>
</li>